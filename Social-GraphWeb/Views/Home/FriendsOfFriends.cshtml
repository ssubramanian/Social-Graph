@model Social_GraphWeb.Controllers.FriendsViewModel

@{
	ViewBag.Title = "Friends of " + Model.Me.Data.FirstName;
	Layout = "../shared/_Layout.cshtml";
}

<div>
	<a href="@Url.Action("FriendsOfFriends", new { startNodeId = Model.MyId, endLevel = 100 })">@Model.Me.Data.FirstName's whole network</a>	
</div>
<div>
	<a href="@Url.Action("FriendsOfFriends", new { startNodeId = Model.MyId, startLevel = 1 ,endLevel = 1 })">@Model.Me.Data.FirstName's immediate friends</a>	
</div>
<div>
	<a href="@Url.Action("FriendsOfFriends", new { startNodeId = Model.MyId, startLevel = 2, endLevel = 2 })">Friends of @Model.Me.Data.FirstName's friends</a>	
</div>

<ol>
	@foreach (var person in Model.Friends)
	{
		<li>
			<a href="@Url.Action("FriendsOfFriends", new { startNodeId = person.Reference.Id, endLevel = 100 })">@person.Data.FirstName</a>
		</li>
	}
</ol>
